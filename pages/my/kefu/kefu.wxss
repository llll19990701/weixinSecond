.contain{
  width: 100%;
  padding: 0 46rpx;
  box-sizing: border-box;
}
.slide-image{
  width: 100%;
  height: 310rpx;
  border-radius: 20rpx;
}
.card{
  margin-top: 40rpx;
  border-radius: 20rpx;
  width: 100%;
  height: 162rpx;
  box-sizing: border-box;
  
  display: flex;
  position: relative;
  box-shadow: 0px 0px 18px 0px rgba(5, 5, 5, 0.15);
}
.card button{
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0rpx;
    top: 0rpx;
    opacity: 0.01;
}
.card1{
  width: 140rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  
}
