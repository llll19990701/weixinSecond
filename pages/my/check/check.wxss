/* pages/my/buy/buy.wxss */.publish{
  width: 100%;
  height: 100vh;
}
.tab-container{
  width: 100%;
  display: flex;
  height: 80rpx;
 
}
.tab{
  flex: 1;
}
.tab-item{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-bottom:1px solid #eee
}
.tab-item .tab_on{
  width: 100%;
  height: 80rpx;
  border-bottom:2px solid #4EEE94;
}
.publish-container{
  width: 100%;
  display: flex;


  flex-direction: column;
  background-color: #fff;
}
.publish-item{
  margin:5px auto;
  box-sizing: border-box;
  padding: 15rpx 15prx 15rpx 15rpx;
  width: 95%;
  box-shadow: 0px 0px 18px 0px rgba(5, 5, 5, 0.15);
  border-radius: 30rpx
}
.top,.center{
    width: 90%;
    margin: 0 auto;
    border-bottom:1px solid  #eee;
    padding: 10rpx 10rpx 10rpx 0;
    position: relative;
    display: flex;
    justify-content: space-between;
}
.top image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 5rpx;

}
.top .status{
  position: absolute;
  left: 70rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}
.top .timer{
  position: absolute;
  padding-left: 10rpx;
  letter-spacing: 3rpx;
  font-size: 30rpx;
  font-weight: 600;
  right: 10rpx;
  margin-top: 5rpx;
  color: #b2b2b2;

}
.center image{
  width: 120rpx;
  height: 120rpx;
}
.center .publish-detail{
  width: calc(100% - 120rpx);
  display: flex;
  flex-direction: column;
 
}
.center .publish-detail .publish-title{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 38rpx;
  font-family: sans-serif;
  align-content: flex-start;
  display: block;
}
.center .publish-detail .publish-price{
  width: 100%;
  color:red;
  font-size: 35rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  justify-content: flex-end;
}
.bottom {
  width: 95%;
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 0 20rpx 0;
}

.cancel {
  width: 110rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 20rpx;
  height: 50rpx;
  border-radius: 25rpx;
  color: #fbbd08;
  border: 1rpx solid #fbbd08;
  margin-left: 20rpx;
}
.delete{
  color: #b2b2b2;
  border: 1rpx solid #b2b2b2;
}
.nocontent {
  width: 100%;
  height: calc(100% - 80rpx);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
}

.nocontent image {
  padding-left: 80rpx;
  width: 340rpx;
  height: 272rpx;
}

.blank_text {
  padding-top: 40rpx;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  color: #c6c6c8;
}/* pages/my/check/check.wxss */