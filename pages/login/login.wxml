<!--pages/login/login.wxml-->
<view class="login-container">
    <view class="login-box">
        <view class='header'>
            <image src='/images/weixin (2).png'></image>
        </view>
 
        <view class='content'>
            <view>申请获取以下权限</view>
            <text>获得你的公开信息(昵称，头像等)</text>
        </view>
 
        <button class='bottom' type='primary'  lang="zh_CN" open-type="getUserInfo" bindgetuserinfo="getUserInfos">
            授权登录
        </button>
    </view>
</view>
 

