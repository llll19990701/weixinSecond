/* pages/login/login.wxss */
.login-container{
  width: 100%;
  height: 100vh;
  position: relative;
  display: flex;
  justify-items: center;
}
.login-box{
  width: 100%;
  height: 60vh;
  display:flex;
  flex-direction: column;
  justify-content: space-evenly;
  margin-top: 20px;
}
.header {
  margin: 0 0 30rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 180rpx;
  height: 180rpx;
}
.content {
  margin-left: 50rpx;
  margin-bottom: 30rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 30rpx;
  font-size:30rpx;
}

.bottom {
  border-radius: 80rpx;
  margin: 30rpx 50rpx;
  font-size: 35rpx;
}