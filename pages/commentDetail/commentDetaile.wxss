/* pages/commentDetail/commentDetaile.wxss */
.container{
  width: 100%;
  height: 100vh;
  position: relative;
}
.top{
  width: 95%;
  margin:0 auto
}
.commentsList{
  width: 100%;
}
.commentItem{
  width: 95%;
  min-height: 100rpx;
  margin: 0 auto;
  display: flex;
  /* border-top: 1px solid #eee; */
  border-bottom: 1px solid #eee;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
.commentItem .left{
  width: 120rpx;
  height: 100rpx;
}
.commentItem image{
  width: 80rpx;
  height: 80rpx;
  margin:0 auto;
  border-radius: 70rpx;
}
.commentItem .right{
  width: calc(100% - 120rpx);
  height: 100rpx;
}
.right .right-top{
  width: 100%;
  display: flex;
  justify-content: space-between;
  height:50rpx ;
  line-height: 50rpx;

  justify-content: space-between;
}
.right-top .name{
  font-size: 30rpx;
}
.right-top .time{
  font-size:30rpx;
  color: #b2b2b2;
}
.right-bottom{
  width: 100%;
  min-height: 50rpx;

  display: flex;
  justify-items: center;
  align-items: center;
}
.replyTo{
  min-width: 0px;
}
.to {
  width:80rpx;
  font-size: 30rpx;
  margin-right: 10rpx;
}
.replyee{
  width: 80rpx;
  font-size: 30rpx;
 color:#1f6fd8;
}
.replyContent{
  font-size: 30rpx;
  margin-top: 10rpx;
}
.comment-bottom{
  width: 100%;
  background-color: azure;
  position: absolute;
  bottom: 0;
  display: flex;
}
.input{
  width: 75%;
  margin-top: 10rpx;
  border-radius: 60rpx;
  box-shadow: 10px 0px 18px 0px rgba(5, 5, 5, 0.15);
  padding: 0rpx 20rpx 10rpx 20rpx;
  display: inline-block;
  font-size: 28rpx;
  padding-top: 10rpx;
}
.btn{
  width: 15% ;
  height: 60rpx ;
  line-height: 60rpx;
  background-color: #4EEE94;
  margin-top: 10rpx;
  margin-left: 15rpx;
  border-radius: 30rpx;
  font-size: 25rpx;
  text-align: center;
}