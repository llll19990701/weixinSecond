/* components/goodItem/goodItem.wxss */
.good-box{
  width: 320rpx;
  margin-bottom: 24rpx;
  border-radius: 5px;
  border: 1px solid #D1D1D1;
  padding-bottom: 10rpx;
  margin-left: 12px;
  margin-right: 12px;
}
.image-box{
width: 320rpx;
height: 320rpx;
}
.good-image{
  width: 100%;
  height: 100%;
}
.good-title{
  width: 280rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0 10rpx 0;
  color: #000;
  margin-left: 24rpx;
}
.goods-price-container{
  display: flex;
  align-items: baseline;
}
.good-price{
  overflow: hidden;
  font-size: 34rpx;
  color: #F20C32;
  margin-left: 24rpx;
}
.good-price2{
  overflow: hidden;
  font-size: 26rpx;
  color: #aaa;
  text-decoration: line-through;
  margin-left: 20rpx;
}

