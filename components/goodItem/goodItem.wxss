/* components/goodItem/goodItem.wxss */
.good-box{
  width: 320rpx;
  margin-bottom: 24rpx;
  border-radius: 5px;
  /* border: 1px solid #D1D1D1; */
  box-shadow: 0px 0px 18px 0px rgba(5, 5, 5, 0.15);
  padding-bottom: 10rpx;
  margin-left: 12px;
  margin-right: 12px;
  margin-top: 24rpx;
}
.image-box{
width: 320rpx;
height: 320rpx;
display: flex;
justify-items: center;
align-items: center;
}
.good-image{
  width: 90%;
  height: 90%;
  margin:0 auto;
}
.good-title{
  width: 280rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0 10rpx 0;
  color: #000;
  margin-left: 24rpx;
}
.goods-price-container{
  display: flex;
  align-items: baseline;
}
.good-price{
  overflow: hidden;
  font-size: 34rpx;
  color: #F20C32;
  margin-left: 24rpx;
}
.good-price2{
  overflow: hidden;
  font-size: 26rpx;
  color: #aaa;
  text-decoration: line-through;
  margin-left: 20rpx;
}

